        <PasswordBox x:Name="PasswordPersonal" HorizontalAlignment="Left" Margin="61,141,0,0" VerticalAlignment="Top" Width="186" Height="33" SelectionBrush="#FF81C3F7" Background="#FFDDFFF5"/>
        <Label HorizontalAlignment="Left" Margin="579,4,0,302" MouseDown="CloseWindow" Width="30">
            <Label.Background>
                <ImageBrush ImageSource="/free-icon-multiply-399274.png"/>
            </Label.Background>
        </Label>
        <Button x:Name="AddP" Content="Добавить работника" HorizontalAlignment="Left" Margin="247,240,0,0" VerticalAlignment="Top" Width="181" Height="38" Background="#FFFCE866" FontWeight="Bold" FontStyle="Italic" FontSize="16" Click="Добавить_Click"/>
    </Grid>
</Window>
