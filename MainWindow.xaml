        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Image Height="456" Margin="200,-87,0,0" VerticalAlignment="Top" Source="/0ogWqjFt7cw.jpg" HorizontalAlignment="Left" Width="479" Grid.RowSpan="2">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/0ogWqjFt7cw.jpg"/>
            </Image.OpacityMask>
        </Image>
        <Label Content="Добро пожаловать" HorizontalAlignment="Left" Margin="89,14,0,0" VerticalAlignment="Top" Width="158" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24" RenderTransformOrigin="0.573,0.408" Height="39"/>
        <Button x:Name="Проверить" Content="Проверить" HorizontalAlignment="Left" Margin="81,189,0,0" VerticalAlignment="Top" Width="146" Height="38" Background="#FFFCE866" FontWeight="Bold" FontStyle="Italic" FontSize="16" Click="Проверить_Click"/>
        <Label Content="Введите данные для входа в приложение" Margin="47,53,0,0" VerticalAlignment="Top" FontFamily="Perpetua Titling MT" FontStyle="Italic" HorizontalAlignment="Left" Width="242" Height="24"/>
